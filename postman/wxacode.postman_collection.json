{
  "info": {
    "name": "User Center - 生成小程序码",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "token", "value": "" },
    { "key": "appId", "value": "wxe6d828ae0245ab9c" },
    { "key": "code", "value": "" },
    { "key": "nickname", "value": "" },
    { "key": "avatarUrl", "value": "" },
    { "key": "qrcodeId", "value": "abc123" },
    { "key": "page", "value": "pages/login/index" },
    { "key": "width", "value": "430" }
  ],
  "item": [
    {
      "name": "微信小程序登录（获取token）",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"appId\": \"{{appId}}\",\n  \"code\": \"{{code}}\",\n  \"userInfo\": {\n    \"nickname\": \"{{nickname}}\",\n    \"avatarUrl\": \"{{avatarUrl}}\"\n  }\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{baseUrl}}/front/auth/wxMiniAppLogin",
          "host": ["{{baseUrl}}"],
          "path": ["front", "auth", "wxMiniAppLogin"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "try {",
              "  const res = pm.response.json();",
              "  if (res && res.data && res.data.token) {",
              "    pm.collectionVariables.set('token', res.data.token);",
              "  }",
              "} catch (e) { }"
            ]
          }
        }
      ]
    },
    {
      "name": "生成小程序码",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"appId\": \"{{appId}}\",\n  \"qrcodeId\": \"{{qrcodeId}}\",\n  \"page\": \"{{page}}\",\n  \"width\": {{width}}\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{baseUrl}}/front/auth/qr/wxacode",
          "host": ["{{baseUrl}}"],
          "path": ["front", "auth", "qr", "wxacode"]
        }
      },
      "response": [
        {
          "name": "成功响应示例",
          "originalRequest": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"appId\": \"{{appId}}\",\n  \"qrcodeId\": \"{{qrcodeId}}\",\n  \"page\": \"{{page}}\",\n  \"width\": {{width}}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/front/auth/qr/wxacode",
              "host": ["{{baseUrl}}"],
              "path": ["front", "auth", "qr", "wxacode"]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [ { "key": "Content-Type", "value": "application/json" } ],
          "body": "{\n  \"code\": 200,\n  \"message\": \"success\",\n  \"data\": {\n    \"qrcodeId\": \"abc123\",\n    \"expireAt\": 1731830000000,\n    \"imageBase64\": \"iVBORw0KGgoAAA...\"\n  }\n}"
        }
      ]
    }
  ]
}