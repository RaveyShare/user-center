	"item": [
		{
			"name": "1. 微信小程序登录（获取token）",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"try {",
							"  const res = pm.response.json();",
							"  if (res && res.data && res.data.token) {",
							"    pm.collectionVariables.set('token', res.data.token);",
							"    console.log('Token已保存: ' + res.data.token);",
							"  }",
							"} catch (e) {",
							"  console.error('解析响应失败: ' + e.message);",
							"}"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"appId\": \"{{appId}}\",\n  \"code\": \"{{code}}\",\n  \"userInfo\": {\n    \"nickname\": \"{{nickname}}\",\n    \"avatarUrl\": \"{{avatarUrl}}\"\n  }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/front/auth/wxMiniAppLogin",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"front",
						"auth",
						"wxMiniAppLogin"
					]
				},
				"description": "使用微信小程序code登录，获取JWT token"
			},
			"response": []
		},
